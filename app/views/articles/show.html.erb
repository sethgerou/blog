<p>
  <strong class="headings">ARTICLE TITLE:</strong>
  <%= @article.title %>
</p>

<p>
  <strong class="headings">TEXT:</strong>
  <%= @article.text %>
</p>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %> |
<%= link_to 'Delete', article_path,
         method: :delete,
         data: { confirm: 'Are you sure?' } %>

<br><br><br>
<h5>COMMENTS:</h5>
<%= render @article.comments %>
<br>
<h5>Add a comment:</h5>
<%= render 'comments/form' %>
